generator client {
  provider = "prisma-client-js"
  output = "./generated/client"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        Int         @id @default(autoincrement())
  name      String      @unique
  email     String      @unique
  password  String
  role      EnumRole    @default(USER)
  active    Boolean     @default(true)
  refresh_token String?
  reset_token String?
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt

  entreprises Entreprise[]

  @@index([email, name])
  @@map("users")
}

enum EnumRole {
  ADMIN
  USER
}

model Entreprise {
  id          Int     @id @default(autoincrement())
  name        String
  email       String
  city        String
  cp          String
  address1    String
  address2    String?
  phone       String?
  description String?
  image       String?
  ownerId     Int
  categorieId Int?

  owner      User       @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  categorie  Categorie? @relation(fields: [categorieId], references: [id])
  photos     Galerie[]
  formulaires Formulaire[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt @default(now())

  @@map("entreprises")
}

model Categorie {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  entreprises Entreprise[]

  @@map("categories")
}

model Formulaire {
  id        Int      @id @default(autoincrement())
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  entrepriseId Int

  entreprise Entreprise @relation(fields: [entrepriseId], references: [id], onDelete: Cascade)

  inputs      Input[]
  soumissions Soumission[]

  @@map("formulaires")
}

model Galerie {
  id        Int      @id @default(autoincrement())
  path      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  entrepriseId Int

  entreprise Entreprise @relation(fields: [entrepriseId], references: [id], onDelete: Cascade)

  @@map("galeries")
}

model Input {
  id           Int      @id @default(autoincrement())
  name         String   @default("Nouveau champ")
  type         String   @default("text")
  required     Boolean  @default(true)
  formulaireId Int

  formulaire Formulaire @relation(fields: [formulaireId], references: [id], onDelete: Cascade)
  options    Option[]

  @@map("inputs")
}

model Option {
  id      Int    @id @default(autoincrement())
  value   String @default("Nouveau choix")
  inputId Int

  input Input @relation(fields: [inputId], references: [id], onDelete: Cascade)

  @@map("options")
}

model Soumission {
  id        Int      @id @default(autoincrement())
  content   Json
  email     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  formulaireId Int
  formulaire   Formulaire @relation(fields: [formulaireId], references: [id])

  @@map("soumissions")
}
